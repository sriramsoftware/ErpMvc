@model AlmacenCore.Models.ExistenciaCentroDeCosto

@{
    ViewBag.Title = "Modificar existencia de centros de costo";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "ExistenciaCentroDeCosto", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary()
    <div class="col-md-8 col-md-offset-2">
        @Html.HiddenFor(m => m.ProductoId)
        @Html.HiddenFor(m => m.CentroDeCostoId)
        <div class="form-group">
            @Html.LabelFor(m => m.Producto, new {@class = "col-md-4 control-label"})
            <div class="col-md-8">
                @Html.DisplayFor(m => m.Producto.Producto.Nombre, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CentroDeCosto, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.DisplayFor(m => m.CentroDeCosto.Nombre, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Cantidad, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Cantidad)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                @Html.ActionLink("Atrás", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
