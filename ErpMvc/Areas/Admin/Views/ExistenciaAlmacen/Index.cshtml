
@model IEnumerable<AlmacenCore.Models.ExistenciaAlmacen>
@{
    ViewBag.Title = "Existencias de almacen";
}

<table class="table dynamic">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Producto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExistenciaEnAlmacen)
                    @Html.DisplayFor(modelItem => item.Producto.UnidadDeMedida.Siglas)
                </td>
                <td class="col-md-2 text-right">
                    <a class="btn btn-warning btn-sm" data-toggle="tooltip" data-placement="top" title="Editar" href="@Url.Action("Edit", new {Id = item.Id})"><i class="glyphicon glyphicon-edit"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section SeccionDerecha
{
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12 text-left">
            <p class="parrafo_derecha">&nbsp;@ViewBag.Title</p>
        </div>
    </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/datatables.min.js"></script>
    <script src="~/Scripts/mbs-qdtf.js"></script>
    <script>
        $(document).ready(function () {
            $('btn').tooltip();
        });
    </script>
}


