@model Sisca.ViewModels.VehiculoViewModel

@{
    ViewBag.Tittle = "Entrada de vehículos";
}



@using (Html.BeginForm("VehiculosEnPeriodo", "Reportes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="formpanel panel-default">
        <div class="panel-heading">
            <h3 class="text-center">Reporte control de vehículos</h3>
        </div>
        <div class="panel-body">
            <p class="alert-success"><strong>Nota:</strong> Utilice los diferentes filtros de búsqueda para obtener la información que desee</p>
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.VehiculoId, "Vehículo", new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("VehiculoId", null, String.Empty, new {@class = "form-control select"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ChoferId, "Chofer", new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("ChoferId", null, String.Empty, new {@class = "form-control select"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AutorizaVehiculoId, "Autorizado por", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("AutorizaVehiculoId", null, String.Empty, new { @class = "form-control select" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.FechaInicio, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FechaInicio)
                        @Html.ValidationMessageFor(model => model.FechaInicio)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FechaFin, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FechaFin)
                        @Html.ValidationMessageFor(model => model.FechaFin)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Observaciones, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Observaciones)
                    </div>
                </div>

            </div>
        </div>
        <div class="panel-footer text-right">
            <div class="form-group">
                <input type="submit" value="Generar reporte" class="btn btn-success" />
                <a class="btn btn-info" href="@Url.Action("Index","Home")">Cancelar</a>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/chosen.jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#FechaInicio').datepicker({ format: "dd/mm/yyyy" });
            $('#FechaFin').datepicker({ format: "dd/mm/yyyy" });
            $('.chzn-single').chosen();
            $('#FechaFin').val("");
            $('#FechaInicio').val("");
            $(".select").chosen();
        });

    </script>
}