@model ComercialCore.Models.UnidadDeMedida

@{
    ViewBag.Title = "nueva unidad de medida";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Agregar", "UnidadesDeMedidas", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary()
    <div class="col-md-8 col-md-offset-2">
        <div class="form-group">
            @Html.LabelFor(m => m.Nombre, new {@class = "col-md-4 control-label"})
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Nombre, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Nombre)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Siglas, new {@class = "col-md-4 control-label"})
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Siglas, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Siglas)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.TipoDeUnidadDeMedida, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.DropDownList("TipoDeUnidadDeMedidaId",null, new { @class = "form-control select" })
                @Html.ValidationMessageFor(m => m.TipoDeUnidadDeMedidaId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FactorDeConversion, new { @class = "col-md-4 control-label" })
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.FactorDeConversion, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FactorDeConversion)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                @Html.ActionLink("Atrás", "Listado",null, new { @class = "btn btn-default" })
                <input type="submit" class="btn btn-success" value="Crear" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
