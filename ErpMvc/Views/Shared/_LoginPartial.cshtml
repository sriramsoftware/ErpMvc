@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("CerrarSesion", "Seguridad", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> @User.Identity.GetUserName()<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    @Html.ActionLink("Cambiar contraseña", "CambiarContraseña", "Seguridad", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li class="divider"></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-off"></span> Cerrar sesión</a></li>
            </ul>
        </li>        
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Autenticarse", "Autenticarse", "Seguridad", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
