@model ErpMvc.ViewModels.ResetearContraseñaViewModel

@{
    ViewBag.Title = "Restablecer contraseña";
}

<div class="container">
    <div class="panel panel-form col-md-7">
        <h2>Reestablecer Contraseña</h2>

        @using (Html.BeginForm("ResetearContraseña", "Seguridad", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary()

            @Html.HiddenFor(m => m.Usuarioid)
            <div class="form-group">
                @Html.LabelFor(m => m.ContraseñaNueva, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ContraseñaNueva, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfimaContraseña, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfimaContraseña, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Guardar" />
                    @Html.ActionLink("Atras","Index","Trabajadores", null, new{@class = "btn btn-default"})
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
