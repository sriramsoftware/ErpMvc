@using Microsoft.AspNet.Identity
@model SeguridadCore.ViewModels.CambiarContraseñaViewModel


<p class="col-md-offset-2">Estas autenticado como <strong>@User.Identity.GetUserName()</strong>.</p>
@using (Html.BeginForm("CambiarContraseña", "Seguridad", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.ContraseñaActual, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ContraseñaActual, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContraseñaNueva, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ContraseñaNueva, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfimaContraseña, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfimaContraseña, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Inicio", "Index", "Inicio", null,new { @class = "btn btn-default"})
            <input type="submit" value="Cambiar contraseña" class="btn btn-success" />
        </div>
    </div>
   
}
