@using CompraVentaCore.Models
@model IEnumerable<CompraVentaCore.Models.Venta>

@{
    ViewBag.Title = "Ventas";
}

<div id="ventas-div">
    @{
        Html.RenderAction("ListaDeVentasPartial", new { Id = ViewBag.DiaContable.Id });
    }
</div>

@section SeccionDerecha
