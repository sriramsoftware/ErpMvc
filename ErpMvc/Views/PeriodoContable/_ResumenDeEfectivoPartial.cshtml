

<!-- TABLA RESUMEN -->
<div class="row ">
    <div class="col-md-5 col-md-offset-1 col-sm-6 col-sm-offset-3 col-xs-12 text-center">
        <table class="table table-hover table-striped panel panel-default">
            <tr>
                <td class="primary col-md-2">Efectivo Inicial</td>
                <td class="col-md-1 text-right">
                    {{efectivo_inicial | currency }}
                </td>
            </tr>
            <tr>
                <td class="primary col-md-2">(+) Ventas</td>
                <td class="col-md-1 text-right">
                    {{ventas | currency}}
                </td>
            </tr>
            <tr>
                <td class="primary col-md-2">(-) Compras</td>
                <td class="col-md-1 text-right">
                    {{compras | currency}}
                </td>
            </tr>
            <tr>
                <td class="primary col-md-2">(-) Gastos</td>
                <td class="col-md-1 text-right">
                    {{gastos | currency}}
                </td>
            </tr>
            <tr>
                <td class="primary col-md-2">(=) Efectivo Antes del Cierre</td>
                <td id="efectivo-actual" class="col-md-1 text-right">
                    {{efectivo_antes_cierre | currency}}
                </td>
            </tr>
            <tr>
                <td class="primary col-md-2">(-) Efectivo en Caja</td>
                <td id="caja" class="col-md-1 text-right">{{efectivo_a_dejar_en_caja | currency}}</td>
            </tr>
            <tr>
                <td class="primary col-md-2">(=) Extracción Antes del Cierre</td>
                <td id="extraccion" class="col-md-1 text-right">{{efectivo_a_extraer | currency}}</td>
            </tr>
        </table>
    </div>
    <div class="col-md-5 text-center">
        <table class="table table-hover table-striped panel panel-default">
            <tr>
                <td class="primary col-md-2">Ventas totales</td>
                <td class="col-md-1 text-right">
                    {{ventas | currency }}
                </td>
            </tr>
            <tr>
                <td class="primary col-md-2">(-) No se calcula porciento</td>
                <td class="col-md-1 text-right">
                    {{ventas_sin_porciento | currency}}
                </td>
            </tr>
            <tr>
                <td class="primary col-md-2">(=) Se calcula porciento</td>
                <td class="col-md-1 text-right">
                    {{ventas_con_porciento | currency}}
                </td>
            </tr>
        </table>
        <table class="table table-hover table-striped panel panel-default">
            <tr>
                <td class="primary col-md-2">Propinas</td>
                <td class="col-md-1 text-right">
                    {{propinas | currency }}
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-4"><a id="cierre_btn" class="btn btn-primary">Realizar Cierre</a></div>
</div>
<!-- TABLA RESUMEN (TERMINA AQUI) -->
