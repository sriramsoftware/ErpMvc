@{
    ViewBag.Title = "Nueva Licencia";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Nueva", "Licencia", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary()
    <div class="col-md-8 col-md-offset-2">
        <div class="form-group">
            @Html.Label("Licencia", new {@class = "col-md-4 control-label"})
            <div class="col-md-8">
                <input type="file" name="Licencia" class="form-control" required="required"/>
                @Html.ValidationMessage("Licencia")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                @Html.ActionLink("Atrás", "Index", null, new {@class = "btn btn-default"})
                <input type="submit" class="btn btn-success" value="Guardar"/>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
