
@{
    ViewBag.Title = "DeleteInfo";
}

<h2>Borrado de informacion</h2>

<div class="col-md-12">
    <a class="btn btn-danger" id="btn-delete" href="#">Borrar</a>
</div>

<!-- MODAL CONFIRMACION -->
<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-keyboard="true">
    <div class="modal-dialog">
        <div class="modal-content" id="agregados-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 id="modal-title" class="modal-title">Confirmar borrar</h4>
            </div>
            <div id="modal-detalle" class="modal-body">
                <div class="container">
                   <p>Seguro que desea borrar los datos???</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <a class="btn btn-danger" href="@Url.Action("DeleteInfoConfirmado")">Borrar</a>
            </div>

        </div>
    </div>
</div>
<!-- TERMINA MODAL CONFIRMACION -->
@section scripts
{
    <script>
        $(document).ready(function() {
            $("#btn-delete").click(function() {
                $("#modal").modal('show');
            });
        });
    </script>
}
