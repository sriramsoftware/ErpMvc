@model IEnumerable<ComercialCore.Models.GrupoDeProducto>

@{
    ViewBag.Title = "grupos de productos";
}

<h2>@ViewBag.Title</h2>
<hr />

<p>
    <a class="btn btn-success" href="@Url.Action("Agregar","GruposDeProductos")"> <i class="glyphicon glyphicon-plus"></i> Nuevo</a>
</p>

<table class="table dynamic">
    <thead>
        <tr>
            <th>
                Descripcion
            </th>
            <th>Clasificacion</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clasificacion.Descripcion)
                </td>
                <td class="col-md-2 text-right">
                    <a class="btn btn-warning btn-sm" data-toggle="tooltip" data-placement="top" title="Editar" href="@Url.Action("Editar", new {Id = item.Id})"><i class="glyphicon glyphicon-edit"></i></a>
                    @*<a class="btn btn-danger btn-sm eliminar" data-toggle="tooltip" data-placement="top" title="Eliminar" href="@Url.Action("Eliminar", new {Id = item.Id})"><i class="glyphicon glyphicon-trash"></i></a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/datatables.min.js"></script>
    <script src="~/Scripts/mbs-qdtf.js"></script>
    <script>
        $(document).ready(function () {
            $('btn').tooltip();
        });
    </script>
}
